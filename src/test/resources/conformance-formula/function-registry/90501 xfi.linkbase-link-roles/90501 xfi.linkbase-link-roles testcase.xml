  <number>90501</number>

  <name>Function test for xfi:linkbase-link-roles</name>

  <documentation>
    <xhtml:p>
      Tests of function xfi:linkbase-link-roles($arcrole as xs:string) as xs:anyURI*
      </xhtml:p>
  </documentation>

  <reference xlink:type="simple" xlink:href="http://www.xbrl.org/Specification/XF-PWD-2006-12-07.htm#_Toc152670666"/>

  <variation id="V-01">
    <name>Linkbase link roles used by presentation arcs</name>
    <documentation>
      <xhtml:p>
      </xhtml:p>
     </documentation>
      
    <inputs>
      <schema xlink:type="simple" xlink:href="link-roles-test1.xsd"/>
      <instance readMeFirst="true" id="V01" xlink:type="simple" xlink:href="link-roles-instance.xml"/> 
     <cfcn:call file="V01">
        xfi:linkbase-link-roles(
          'http://www.xbrl.org/2003/arcrole/parent-child'
          )
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         count($result) eq 2 and 
         $result[1] instance of xs:anyURI and
         $result[2] instance of xs:anyURI and
         index-of($result,xs:anyURI('http://abc.com/role/link1')) and
         index-of($result,xs:anyURI('http://abc.com/role/link2'))
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-02">
    <name>Footnote link roles used by footnote arcs</name>
    <documentation>
      <xhtml:p>
      </xhtml:p>
     </documentation>
      
    <inputs>
      <schema xlink:type="simple" xlink:href="link-roles-test1.xsd"/>
      <instance readMeFirst="true" id="V02" xlink:type="simple" xlink:href="footnote-roles-instance.xml"/> 
      <cfcn:call file="V02">
        xfi:linkbase-link-roles(
          'http://www.xbrl.org/2003/arcrole/fact-footnote'
          )
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         count($result) eq 2 and 
         $result[1] instance of xs:anyURI and
         $result[2] instance of xs:anyURI and
         index-of($result,xs:anyURI('http://www.xbrl.org/2003/role/link')) and
         index-of($result,xs:anyURI('http://abc.com/role/link1'))
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-03">
    <name>Non-existent arcrole parameter returns empty sequence</name>
    <documentation>
      <xhtml:p>
      </xhtml:p>
     </documentation>
      
    <inputs>
      <schema xlink:type="simple" xlink:href="link-roles-test1.xsd"/>
      <instance readMeFirst="true" id="V03" xlink:type="simple" xlink:href="footnote-roles-instance.xml"/> 
      <cfcn:call file="V03">
        xfi:linkbase-link-roles(
          'http://abc.com/2003/arcrole/no-such-role'
          )
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         empty($result)
      </cfcn:test>
    </outputs>
  </variation>

