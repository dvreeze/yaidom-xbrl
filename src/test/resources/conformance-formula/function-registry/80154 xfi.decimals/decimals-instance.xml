<xbrl 
xmlns="http://www.xbrl.org/2003/instance" 
xmlns:concept="http://xbrl.org/formula/conformance/example" 
xmlns:link="http://www.xbrl.org/2003/linkbase" 
xmlns:xlink="http://www.w3.org/1999/xlink" 
xmlns:iso4217="http://www.xbrl.org/2003/iso4217" 
>

  <link:schemaRef 
    xlink:type="simple" 
    xlink:href="decimals-test.xsd"/>

  <context id="context">
    <entity>
      <identifier scheme="http://xbrl.org/entity/identification/scheme">earth</identifier>
    </entity>
    <period>
      <instant>2007-12-31</instant>
    </period>
  </context>

  <unit id="monetary">
    <measure>iso4217:USD</measure>
  </unit>

  <unit id="pure">
    <measure>pure</measure>
  </unit>

  <concept:c1 contextRef="context">hello earthling</concept:c1>
  <concept:c2 contextRef="context" unitRef="pure" decimals="0">400</concept:c2>
  <concept:c2 contextRef="context" unitRef="pure" decimals="INF">400</concept:c2>
  <concept:c2 contextRef="context" unitRef="pure" decimals="-2">4e2</concept:c2>
  <concept:c2 contextRef="context" unitRef="pure" precision="4">400</concept:c2>
  <concept:c2 contextRef="context" unitRef="pure" precision="INF">400</concept:c2>
  <concept:c3 contextRef="context" unitRef="pure">
    <numerator>1</numerator>
    <denominator>3</denominator>
  </concept:c3>
  <concept:c4/>
</xbrl>