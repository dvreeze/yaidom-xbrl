      <cfcn:call file="V07">
         xfi:context( /xbrli:xbrl/concept:c1[1],/xbrli:xbrl/concept:c1[2] )
      </cfcn:call>
    </inputs>
    <outputs>
      <error>xqt-err:XPST0017</error>
    </outputs>
  </variation>

