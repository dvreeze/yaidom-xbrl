  <number>80103</number>

  <name>Function test for xfi:unit-numerator</name>

  <documentation>
    <xhtml:p>
      Tests of function xfi:unit-numerator($unit as element(xbrli:unit)) as element(xbrli:measure)+
      </xhtml:p>
  </documentation>

  <reference xlink:type="simple" xlink:href="http://www.xbrl.org/Specification/XF-PWD-2006-12-07.htm#_Toc152670669"/>

  <variation id="V-01">
    <name>Returns correct measure for unit-squareMiles</name>
    <documentation>
      <xhtml:p>
        Tests that element returned is unit for specified item.
      </xhtml:p>
     </documentation>
      
    <inputs>
      <schema xlink:type="simple" xlink:href="unit-test-concepts.xsd"/>
      <instance readMeFirst="true" id="V01" xlink:type="simple" xlink:href="unit-test-instance.xml"/>
      <cfcn:call file="V01">
        xfi:unit-numerator( xfi:unit( /xbrli:xbrl/c:a[1] ) )
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         $result instance of element(xbrli:measure)+ and
         count( $result ) eq 1 and
         $result is //xbrli:unit[@id eq 'unit-squareMiles']/xbrli:measure
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-02">
    <name>Returns correct measures for multi-measure unit</name>
    <documentation>
      <xhtml:p>
        Tests that elements returned are measures for specified item.
      </xhtml:p>
     </documentation>
    <inputs>
      <schema xlink:type="simple" xlink:href="unit-test-concepts.xsd"/>
      <instance readMeFirst="true" id="V02" xlink:type="simple" xlink:href="unit-test-instance.xml"/>
      <cfcn:call file="V02">
         xfi:unit-numerator( //xbrli:unit[@id eq 'unit-power'] )
      </cfcn:call>
    </inputs>
    <outputs> 
      <cfcn:test>
         $result instance of element(xbrli:measure)+ and
         count(
            $result intersect
             ( //xbrli:unit[@id eq 'unit-power']/xbrli:measure[1],
               //xbrli:unit[@id eq 'unit-power']/xbrli:measure[2] )
              ) eq 2
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-03">
    <name>Returns measure for divide based unit</name>
    <documentation>
      <xhtml:p>
      </xhtml:p>
     </documentation>
    <inputs>
      <schema xlink:type="simple" xlink:href="unit-test-concepts.xsd"/>
      <instance readMeFirst="true" id="V03" xlink:type="simple" xlink:href="unit-test-instance.xml"/>
      <cfcn:call file="V03">
         xfi:unit-numerator( //xbrli:unit[@id eq 'unit-energy'] )
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         $result instance of element(xbrli:measure)+ and
         count( $result ) eq 3 and
         count( $result[local-name() eq 'measure' and
                        local-name-from-QName(.) eq 'meters'] ) eq 2 and
         count( $result[local-name() eq 'measure' and
                        local-name-from-QName(.) eq 'kilogram'] ) eq 1
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-04">
    <name>Returns measure for inverse unit (1/secs)</name>
    <documentation>
      <xhtml:p>
      </xhtml:p>
     </documentation>
    <inputs>
      <schema xlink:type="simple" xlink:href="unit-test-concepts.xsd"/>
      <instance readMeFirst="true" id="V04" xlink:type="simple" xlink:href="unit-test-instance.xml"/>
      <cfcn:call file="V04">
         xfi:unit-numerator( //xbrli:unit[@id eq 'unit-inverse-time'] )
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         $result instance of element(xbrli:measure)+ and
         count( $result ) eq 1 and
         $result eq QName('http://www.xbrl.org/2003/instance', 'xbrli:pure')
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-05">
    <name>Wrong node to function</name>
    <documentation>
      <xhtml:p>
        XPath-defined error for node type incorrect.
      </xhtml:p>
     </documentation>
    <inputs>
      <schema xlink:type="simple" xlink:href="unit-test-concepts.xsd"/>
      <instance readMeFirst="true" id="V05" xlink:type="simple" xlink:href="unit-test-instance.xml"/>
      <cfcn:call file="V05">
         xfi:unit-numerator( /xbrli:xbrl )
      </cfcn:call>
    </inputs>
    <outputs>
      <error>xqt-err:XPTY0004</error>
    </outputs>
  </variation>

  <variation id="V-06">
    <name>A sequence of items as argument, wrong arity for argument type definition</name>
    <documentation>
      <xhtml:p>
        XPath-defined error for node type incorrect arity of arguments.
      </xhtml:p>
     </documentation>
    <inputs>
      <schema xlink:type="simple" xlink:href="unit-test-concepts.xsd"/>
      <instance readMeFirst="true" id="V06" xlink:type="simple" xlink:href="unit-test-instance.xml"/>
      <cfcn:call file="V06">
         xfi:unit-numerator( //xbrli:unit[starts-with(@id,'unit-speed')] )
      </cfcn:call>
    </inputs>
    <outputs>
      <error>xqt-err:XPTY0004</error>
    </outputs>
  </variation>

  <variation id="V-07">
    <name>Wrong number of arguments</name>
    <documentation>
      <xhtml:p>
        XPath-defined error for incorret number of arguments.
      </xhtml:p>
     </documentation>
    <inputs>
      <schema xlink:type="simple" xlink:href="unit-test-concepts.xsd"/>
      <instance readMeFirst="true" id="V07" xlink:type="simple" xlink:href="unit-test-instance.xml"/>
      <cfcn:call file="V07">
         xfi:unit-numerator( //xbrli:unit[@id eq 'unit-speedMPH'], 
                             //xbrli:unit[@id eq 'unit-speedKMH'] )
      </cfcn:call>
    </inputs>
    <outputs>
      <error>xqt-err:XPST0017</error>
    </outputs>
  </variation>

