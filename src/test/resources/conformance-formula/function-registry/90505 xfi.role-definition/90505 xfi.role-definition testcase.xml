  <number>90505</number>

  <name>Function test for xfi:role-definition</name>

  <documentation>
    <xhtml:p>
      Tests of function xfi:role-definition($arcrole as xs:string, element(xbrli:xbrl)?) as xs:string?
      </xhtml:p>
  </documentation>

  <reference xlink:type="simple" xlink:href="http://www.xbrl.org/Specification/XF-PWD-2006-12-07.htm#_Toc152670666"/>

  <variation id="V-01">
    <name>Definition of role link1</name>
    <documentation>
      <xhtml:p>
      </xhtml:p>
    </documentation>
      
    <inputs>
      <schema readMeFirst="true" id="V01" xlink:type="simple" xlink:href="definition-test1.xsd"/>
     <cfcn:call file="V01">
        xfi:role-definition('http://abc.com/role/link1')
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         $result eq 'Hello from link1'
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-02">
    <name>Definition of role link2</name>
    <documentation>
      <xhtml:p>
      </xhtml:p>
     </documentation>
      
    <inputs>
      <schema readMeFirst="true" id="V02" xlink:type="simple" xlink:href="definition-test1.xsd"/>
     <cfcn:call file="V02">
        xfi:role-definition('http://abc.com/role/link2')
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         $result eq 'Hello from link2'
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-03">
    <name>Definition absent from role link3</name>
    <documentation>
      <xhtml:p>
      </xhtml:p>
     </documentation>
      
    <inputs>
      <schema readMeFirst="true" id="V03" xlink:type="simple" xlink:href="definition-test1.xsd"/>
     <cfcn:call file="V03">
        xfi:role-definition('http://abc.com/role/link3')
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         empty($result)
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-04">
    <name>Definition of non-existent role link4</name>
    <documentation>
