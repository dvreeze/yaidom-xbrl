  <number>90512</number>

  <name>Function test for xfi:relationship-link-attribute</name>

  <documentation>
    <xhtml:p>
      Tests of function xfi:relationship-link-attribute($relationship as xfi:relationship.type,$attribute as xs:qname) as xs:anyType?
    </xhtml:p>
    <xhtml:p>
      Depends on xfi:concept-relationships function in order to provide the arc for testing this function.
    </xhtml:p>
  </documentation>

  <reference xlink:type="simple" xlink:href="http://www.xbrl.org/Specification/XF-PWD-2006-12-07.htm#_Toc152670666"/>

  <variation id="V-01">
    <name>Generic relationship arc A-&gt;B link attribute</name>
    <documentation>
      <xhtml:p>
      </xhtml:p>
     </documentation>
    <inputs>
     <schema readMeFirst="true" id="V01" xlink:type="simple" xlink:href="test.xsd"/>
     <cfcn:call file="V01">
       xfi:relationship-link-attribute(
        xfi:concept-relationships(
           QName('http://abc.com/test','A'), 
           'http://abc.com/role/test-link-role',
           'http://abc.com/arcrole/test-arc-role',
           'descendant',
           1),
        QName('http://abc.com/test','testLinkDate')
           )
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         count($result) eq 1 and 
         $result[1] instance of xs:date and
         $result[1] eq xs:date("2012-12-21")
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-02">
    <name>Generic relationship arc B-&gt;C link's role attribute</name>
    <documentation>
      <xhtml:p>
      </xhtml:p>
     </documentation>
    <inputs>
     <schema readMeFirst="true" id="V02" xlink:type="simple" xlink:href="test.xsd"/>
     <cfcn:call file="V02">
       xfi:relationship-link-attribute(
        xfi:concept-relationships(
           QName('http://abc.com/test','B'), 
           'http://abc.com/role/test-link-role',
           'http://abc.com/arcrole/test-arc-role',
           'descendant',
           1),
        QName('http://www.w3.org/1999/xlink','role')
           )
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         count($result) eq 1 and 
         $result[1] instance of xs:anyURI and
         $result[1] eq xs:anyURI("http://abc.com/role/test-link-role")
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-03">
    <name>Generic relationship arc A-&gt;B nonexisting link attribute</name>
    <documentation>
      <xhtml:p>
      </xhtml:p>
     </documentation>
    <inputs>
     <schema readMeFirst="true" id="V03" xlink:type="simple" xlink:href="test.xsd"/>
     <cfcn:call file="V03">
       xfi:relationship-link-attribute(
        xfi:concept-relationships(
           QName('http://abc.com/test','A'), 
           'http://abc.com/role/test-link-role',
           'http://abc.com/arcrole/test-arc-role',
           'descendant',
           1),
        QName('','foo')
           )
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         empty($result)
      </cfcn:test>
    </outputs>
  </variation>


