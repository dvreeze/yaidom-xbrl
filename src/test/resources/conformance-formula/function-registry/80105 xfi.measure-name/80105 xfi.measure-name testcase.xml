  <number>80105</number>

  <name>Function test for xfi:measure-name</name>

  <documentation>
    <xhtml:p>
      Tests of function xfi:measure-name($measure as element(xbrli:measure)) as xs:QName
      </xhtml:p>
  </documentation>

  <reference xlink:type="simple" xlink:href="http://www.xbrl.org/Specification/XF-PWD-2006-12-07.htm#_Toc152670671"/>

  <variation id="V-01">
    <name>Returns pure measure</name>
    <documentation>
      <xhtml:p>
        Tests that element returned is unit for specified item.
      </xhtml:p>
     </documentation>
      
    <inputs>
      <schema xlink:type="simple" xlink:href="unit-test-concepts.xsd"/>
      <instance readMeFirst="true" id="V01" xlink:type="simple" xlink:href="unit-test-instance.xml"/>
      <cfcn:call file="V01">
         xfi:measure-name( 
           xfi:unit-numerator( //xbrli:unit[@id eq 'unit-inverse-time'] ) )
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         $result instance of xs:QName and
         count( $result ) eq 1 and
         $result eq QName('http://www.xbrl.org/2003/instance', 'xbrli:pure')
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-02">
    <name>Returns correct measure divisor unit</name>
    <documentation>
      <xhtml:p>
        Tests that elements returned are measures for specified item.
      </xhtml:p>
     </documentation>
    <inputs>
      <schema xlink:type="simple" xlink:href="unit-test-concepts.xsd"/>
      <instance readMeFirst="true" id="V02" xlink:type="simple" xlink:href="unit-test-instance.xml"/>
      <cfcn:call file="V02">
         xfi:measure-name( 
           xfi:unit-denominator( //xbrli:unit[@id eq 'unit-inverse-time'] ) )
      </cfcn:call>
    </inputs>
    <outputs> 
      <cfcn:test>
         $result instance of xs:QName and
         count( $result ) eq 1 and
         $result eq QName('http://xbrl.org/formula/conformance/example', 'concept:seconds')
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-03">
    <name>Wrong node to function</name>
    <documentation>
      <xhtml:p>
        XPath-defined error for node type incorrect.
      </xhtml:p>
     </documentation>
    <inputs>
      <schema xlink:type="simple" xlink:href="unit-test-concepts.xsd"/>
      <instance readMeFirst="true" id="V03" xlink:type="simple" xlink:href="unit-test-instance.xml"/>
      <cfcn:call file="V03">
         xfi:measure-name( /xbrli:xbrl )
      </cfcn:call>
    </inputs>
    <outputs>
      <error>xqt-err:XPTY0004</error>
    </outputs>
  </variation>

  <variation id="V-04">
    <name>A sequence of items as argument</name>
    <documentation>
      <xhtml:p>
        XPath-defined error for node type incorrect arity of arguments.
      </xhtml:p>
     </documentation>
    <inputs>
      <schema xlink:type="simple" xlink:href="unit-test-concepts.xsd"/>
      <instance readMeFirst="true" id="V04" xlink:type="simple" xlink:href="unit-test-instance.xml"/>
      <cfcn:call file="V04">
          xfi:measure-name( 
            xfi:unit-numerator( //xbrli:unit[starts-with(@id,'unit-energy')] ) )
      </cfcn:call>
    </inputs>
    <outputs>
      <error>xqt-err:XPTY0004</error>
    </outputs>
  </variation>

  <variation id="V-05">
    <name>Wrong number of arguments</name>
    <documentation>
      <xhtml:p>
        XPath-defined error for node type incorrect number of arguments.
      </xhtml:p>
     </documentation>
    <inputs>
      <schema xlink:type="simple" xlink:href="unit-test-concepts.xsd"/>
      <instance readMeFirst="true" id="V05" xlink:type="simple" xlink:href="unit-test-instance.xml"/>
      <cfcn:call file="V05">
          xfi:measure-name( (//xbrli:measure)[1], (//xbrli:measure)[2] )
      </cfcn:call>
    </inputs>
    <outputs>
      <error>xqt-err:XPST0017</error>
    </outputs>
  </variation>

