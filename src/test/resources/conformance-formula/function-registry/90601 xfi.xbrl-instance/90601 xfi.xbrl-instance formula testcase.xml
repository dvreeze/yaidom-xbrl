  <number>90601</number>

  <name>xfi:xbrl-instance</name>

  <description>
    Tests Xbrl Instance loading function.
  </description>

  <variation id="V-01">
    <name>Loaded instance facts output (instead of target instance)</name>
    <description>
       DTS target namespaces and linkbases differ
     </description>
      
    <data>
      <schema>xbrl-inst-test1.xsd</schema>
      <linkbase>xbrl-inst-facts-formula.xml</linkbase>
      <instance readMeFirst="true">xbrl-inst-facts-instance.xml</instance>
    </data>
    <result>
      <instance>xbrl-inst-facts-result.xml</instance>
    </result>
  </variation>

  <variation id="V-02">
    <name>Diff two instances, separate DTSes facts</name>
    <description>
       DTS target namespaces and linkbases differ
     </description>
      
    <data>
      <schema>xbrl-inst-test1.xsd</schema>
      <linkbase>xbrl-inst-diff-formula.xml</linkbase>
      <instance readMeFirst="true">xbrl-inst-diff-instance.xml</instance>
    </data>
    <result>
      <instance>xbrl-inst-diff-result.xml</instance>
    </result>
  </variation>

  <variation id="V-03">
    <name>Labels of 2 DTSes which share schema but separate label linkbases</name>
    <description>
     </description>
      
    <data>
      <schema>xbrl-inst-test1c.xsd</schema>
      <linkbase>xbrl-inst-test1c-detached-label1.xml</linkbase>
      <linkbase>xbrl-inst-detached-labels-formula.xml</linkbase>
      <instance readMeFirst="true">xbrl-inst-detached-labels-instance1.xml</instance>
    </data>
    <result>
      <instance>xbrl-inst-detached-labels-result.xml</instance>
    </result>
  </variation>


