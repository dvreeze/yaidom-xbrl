<function
  xmlns="http://xbrl.org/2008/function"
  xmlns:reg="http://xbrl.org/2008/registry"
  xmlns:xhtml="http://www.w3.org/1999/xhtml"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:xfi="http://www.xbrl.org/2008/function/instance" 
  xmlns:xfie="http://www.xbrl.org/2008/function/instance/error" 
  xmlns:xbrli="http://www.xbrl.org/2003/instance" 
  xmlns:xlink="http://www.w3.org/1999/xlink"
  xmlns:xqt-err="http://www.w3.org/2005/xqt-errors"
  xsi:schemaLocation="
  http://xbrl.org/2008/registry ../schemas/registry.xsd
  http://xbrl.org/2008/function ../schemas/function.xsd
  ">

  <lastUpdated moment="2010-06-18T00:00:00" />

  <owners>
    <reg:owner id="geoff">
       <reg:name>Geoff Shuetrim</reg:name>
       <reg:affiliation>Galexy</reg:affiliation>
       <reg:email>geoff@galexy.net</reg:email>
       <reg:assumedOwnership moment="2008-02-14T00:00:00" />
    </reg:owner>
    <reg:owner id="herm">
       <reg:name>Herm Fischer</reg:name>
       <reg:affiliation>UBMatrix / Mark V Systems</reg:affiliation>
       <reg:email>fischer@markv.com</reg:email>
       <reg:assumedOwnership moment="2010-06-18T00:00:00" />
    </reg:owner>
  </owners>

  <summary>
    Return the actual or the inferred precision of a numeric fact.
  </summary>

  <documentation>
  </documentation>

  <reference xlink:type="simple" xlink:href="http://www.xbrl.org/Specification/XBRL-RECOMMENDATION-2003-12-31+Corrected-Errata-2006-12-18.htm#_Toc156209155">
  XBRL 2.1 Section 4.6.6
  </reference>
  <reference xlink:type="simple" xlink:href="http://www.xbrl.org/Specification/XBRL-RECOMMENDATION-2003-12-31+Corrected-Errata-2006-12-18.htm#_Toc156209246">
  XBRL 2.1 Example 13, Inferring Precision from Decimals
  </reference>

  <signature name="xfi:precision">
    <input name="item" type="schema-element(xbrli:item)">
      <xhtml:p>
        The numeric item that precision is required for.
      </xhtml:p>
    </input>
    <output type="xs:anyAtomicType">
      <xhtml:p>
        Return the actual or the inferred precision of a numeric fact.  For "INF" the returned type is xs:string.  For numeric precision value, the returned type is xs:NonNegativeInteger.
      </xhtml:p>
    </output>
  </signature>

  <error code="xfie:ItemIsNotNumeric">
    <xhtml:p>
      This error is thrown if the item is not reported with a precision or decimals attribute (except for fraction, which returns INF to correspond to base spec).
    </xhtml:p>
  </error>

  <conformanceTest xlink:type="simple" xlink:href="80153 xfi.precision testcase.xml"/>

  <revisions>
    <reg:revision on="2008-01-23T00:00:00" by="geoff">
      <xhtml:p>
        Defined the function.
      </xhtml:p>
    </reg:revision>
    <reg:revision on="2008-01-23T00:00:00" by="herm">
      <xhtml:p>
        Clarified return type.  Corrected ItemIsNotNumeric to allow fractions (they return INF per 2.1 spec).
      </xhtml:p>
    </reg:revision>

    <reg:revision on="2010-06-18T18:55:00" by="herm">
      <xhtml:p>
        Removed error code xqt-err:XPTY0004, as that is currently listed in the spec for functions applying to all functions.
      </xhtml:p>
    </reg:revision>
  </revisions>

</function>
