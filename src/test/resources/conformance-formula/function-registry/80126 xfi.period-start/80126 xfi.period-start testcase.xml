  <number>80126</number>

  <name>Function test xfi:period-start</name>

  <documentation>
    <xhtml:p>
      Tests of function xfi:period-start($period as element(xbrli:period)) as xs:dateTime
      </xhtml:p>
  </documentation>

  <reference xlink:type="simple" xlink:href="http://www.xbrl.org/Specification/XF-PWD-2006-12-07.htm#_Toc152670680"/>

  <variation id="V-01">
    <name>xfi:period-start returns correct dateTime for an instant context</name>

    <documentation>
      <xhtml:p>
        Tests that either a the instant dateTime element is provided, or an equivalent atomic value of expected dateTime
      </xhtml:p>
    </documentation>

    <inputs>
      <schema xlink:type="simple" xlink:href="period-start-tests.xsd"/>
      <instance readMeFirst="true" id="V01" xlink:type="simple" xlink:href="hello-worlds-instance.xml"/>
      <cfcn:call file="V01">
         xfi:period-start( /xbrli:xbrl/xbrli:context[@id eq 'context-earth']/xbrli:period )
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         ($result instance of element(*,xs:dateTime) or $result instance of xs:dateTime) and 
         count( $result ) eq 1 and 
         $result eq xs:dateTime("2007-12-31T24:00:00") 
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-02">
    <name>Returns correct dateTime for concept whose context is instant</name>
    <documentation>
      <xhtml:p>
        Tests that either a the instant dateTime element is provided, or an equivalent atomic value of expected dateTime.
      </xhtml:p>
    </documentation>

    <inputs>
      <schema xlink:type="simple" xlink:href="period-start-tests.xsd"/>
      <instance readMeFirst="true" id="V02" xlink:type="simple" xlink:href="hello-worlds-instance.xml"/>
      <cfcn:call file="V02">
         xfi:period-start( xfi:period( /xbrli:xbrl/concept:cI[1] ) )
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         ($result instance of element(*,xs:dateTime) or $result instance of xs:dateTime) and 
         count( $result ) eq 1 and 
         $result eq xs:dateTime("2007-12-31T24:00:00") 
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-03">
    <name>Start for start-end duration context</name>
    <documentation>
      <xhtml:p>
        Tests that either a the instant dateTime element is provided, or an equivalent atomic value of expected dateTime.
      </xhtml:p>
    </documentation>
    <inputs>
      <schema xlink:type="simple" xlink:href="period-start-tests.xsd"/>
      <instance readMeFirst="true" id="V03" xlink:type="simple" xlink:href="hello-worlds-instance.xml"/>
      <cfcn:call file="V03">
         xfi:period-start( xfi:period( /xbrli:xbrl/concept:cD[1] ) )
      </cfcn:call>
    </inputs>
    <outputs>
      <cfcn:test>
         ($result instance of element(*,xs:dateTime) or $result instance of xs:dateTime) and 
         count( $result ) eq 1 and 
         $result eq xs:dateTime("2007-01-01T00:00:00") 
      </cfcn:test>
    </outputs>
  </variation>

  <variation id="V-04"> 
    <name>Error for forever context</name>
    <documentation>
      <xhtml:p>
        Tests that indicated error is raised for inapplicable context.
      </xhtml:p>
    </documentation>
    <inputs>
      <schema xlink:type="simple" xlink:href="period-start-tests.xsd"/>
      <instance readMeFirst="true" id="V04" xlink:type="simple" xlink:href="hello-worlds-instance.xml"/>
      <cfcn:call file="V04">
         xfi:period-start( xfi:period( /xbrli:xbrl/concept:cD[2] ) )
      </cfcn:call>
    </inputs>
    <outputs> 
      <error>xfie:PeriodIsForever</error>
    </outputs>
  </variation>

  <variation id="V-05">
    <name>Wrong node to function</name>
    <documentation>
      <xhtml:p>
        XPath-defined error for node type incorrect.
      </xhtml:p>
    </documentation>
    <inputs>
      <schema xlink:type="simple" xlink:href="period-start-tests.xsd"/>
