<xbrl 
xmlns="http://www.xbrl.org/2003/instance" 
xmlns:concept="http://xbrl.org/formula/conformance/example" 
xmlns:link="http://www.xbrl.org/2003/linkbase" 
xmlns:xlink="http://www.w3.org/1999/xlink" 
xmlns:iso4217="http://www.xbrl.org/2003/iso4217" 
>
  
  <link:schemaRef 
    xlink:type="simple" 
    xlink:href="period-tests.xsd"/>

  <context id="context-earth">
    <entity>
      <identifier scheme="http://xbrl.org/entity/identification/scheme">earth</identifier>
    </entity>
    <period>
      <instant>2007-12-31</instant>
    </period>
  </context>
  
  <context id="context-romulus">
    <entity>
      <identifier scheme="http://xbrl.org/entity/identification/scheme">romulan-star-empire</identifier>
    </entity>
    <period>
      <startDate>2007-01-01</startDate>
      <endDate>2007-12-31</endDate>
    </period>
  </context>
  
  <context id="context-vulcan">
    <entity>
      <identifier scheme="http://xbrl.org/entity/identification/scheme">planet-vulcan</identifier>
    </entity>
    <period>
      <forever/>
    </period>
  </context>
  
  <concept:cI contextRef="context-earth">hello earthling</concept:cI>
  <concept:cD contextRef="context-romulus">hello romulan</concept:cD>
  <concept:cD contextRef="context-vulcan">hello vulcan</concept:cD>
  
</xbrl>